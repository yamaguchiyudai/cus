<% admin_breadcrumb(link_to t('spree.reports'), spree.admin_reports_path) %>
<% admin_breadcrumb(t('spree.sales_total')) %>

<% content_for :page_actions do %>
<% end %>


<% content_for :table_filter_title do %>
  <%= t('spree.date_range') %>
<% end %>

<% content_for :table_filter do %>
  <%= render partial: 'spree/admin/shared/report_order_criteria', locals: { action: :sales_total } %>
<% end %>

<table class="admin-report" data-hook="sales_total">
  <thead>
    <tr>
      <th><%= t('spree.currency') %></th>
      <th><%= t('spree.item_total') %></th>
      <th><%= t('spree.adjustment_total') %></th>
      <th><%= t('spree.sales_total') %></th>
    </tr>
  </thead>
  <tbody>
    <% @totals.each do |key, row| %>
      <tr>
        <td><%= key %></td>
        <td><%= row[:item_total].format %></td>
        <td><%= row[:adjustment_total].format %></td>
        <td><%= row[:sales_total].format %></td>
      </tr>
    <% end %>
  </tbody>
</table>
